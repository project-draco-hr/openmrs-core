{
  if (context != null) {
    ConceptService cs=context.getConceptService();
    if (StringUtils.hasText(text)) {
      try {
        setValue(cs.getConcept(Integer.valueOf(text)));
      }
 catch (      Exception ex) {
        log.error(ex);
        throw new IllegalArgumentException("Concept not found: " + ex.getMessage());
      }
    }
 else {
      setValue(null);
    }
  }
}

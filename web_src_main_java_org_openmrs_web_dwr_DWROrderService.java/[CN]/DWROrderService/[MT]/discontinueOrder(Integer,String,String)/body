{
  Date dDiscDate=null;
  if (discontinueDate != null) {
    SimpleDateFormat sdf=Context.getDateFormat();
    try {
      dDiscDate=sdf.parse(discontinueDate);
    }
 catch (    ParseException e) {
      throw new APIException(e.getMessage());
    }
  }
  Order o=Context.getOrderService().getOrder(orderId);
  try {
    Context.getOrderService().discontinueOrder(o,Context.getConceptService().getConcept(discontinueReason).getName().getName(),null,dDiscDate);
  }
 catch (  APIException e) {
    throw new APIException(e.getMessage());
  }
}

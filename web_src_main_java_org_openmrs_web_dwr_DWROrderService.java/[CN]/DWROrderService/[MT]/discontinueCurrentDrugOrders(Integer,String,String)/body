{
  log.debug("beginning method");
  boolean ret=true;
  Date discDate=null;
  if (discontinueDate != null) {
    SimpleDateFormat sdf=Context.getDateFormat();
    try {
      discDate=sdf.parse(discontinueDate);
    }
 catch (    ParseException e) {
      throw new APIException(e.getMessage());
    }
  }
  Patient p=Context.getPatientService().getPatient(patientId);
  List<DrugOrder> currentOrders=Context.getOrderService().getDrugOrdersByPatient(p);
  for (  DrugOrder o : currentOrders) {
    try {
      Context.getOrderService().discontinueOrder(o,Context.getConceptService().getConcept(discontinueReason).getName().getName(),null,discDate);
    }
 catch (    APIException e) {
      throw new APIException(e.getMessage());
    }
  }
  return ret;
}

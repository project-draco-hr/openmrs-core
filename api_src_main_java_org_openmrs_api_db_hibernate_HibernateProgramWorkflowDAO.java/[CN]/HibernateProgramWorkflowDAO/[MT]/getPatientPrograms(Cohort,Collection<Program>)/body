{
  String hql="from PatientProgram ";
  if (cohort != null || programs != null)   hql+="where ";
  if (cohort != null)   hql+="patient.patientId in (:patientIds) ";
  if (programs != null) {
    if (cohort != null)     hql+="and ";
    hql+=" program in (:programs)";
  }
  hql+=" order by patient.patientId, dateEnrolled";
  Query query=sessionFactory.getCurrentSession().createQuery(hql);
  if (cohort != null)   query.setParameterList("patientIds",cohort.getMemberIds());
  if (programs != null)   query.setParameterList("programs",programs);
  return query.list();
}

{
  if (context != null) {
    PatientService ps=context.getPatientService();
    if (StringUtils.hasText(text)) {
      try {
        setValue(ps.getLocation(Integer.valueOf(text)));
      }
 catch (      Exception ex) {
        throw new IllegalArgumentException("Location not found: " + ex.getMessage());
      }
    }
 else {
      setValue(null);
    }
  }
}

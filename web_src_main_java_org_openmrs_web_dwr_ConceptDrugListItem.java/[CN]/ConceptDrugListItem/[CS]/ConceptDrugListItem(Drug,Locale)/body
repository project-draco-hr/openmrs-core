{
  if (drug != null) {
    drugId=drug.getDrugId();
    if (drug.getConcept() != null) {
      conceptId=drug.getConcept().getConceptId();
      concept=new ConceptListItem(drug.getConcept(),null,locale);
    }
    name=drug.getName();
    fullName=drug.getFullName(locale);
    units=drug.getUnits();
  }
}

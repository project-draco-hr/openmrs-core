{
  HttpURLConnection urlConnection=(HttpURLConnection)new URL(urlString).openConnection();
  urlConnection.setRequestMethod("POST");
  urlConnection.setConnectTimeout(15000);
  urlConnection.setUseCaches(false);
  urlConnection.setDoOutput(true);
  String requestParams="username=" + Base64.encode(openmrsUsername.getBytes(Charset.forName("UTF-8"))) + "&password="+ Base64.encode(openmrsPassword.getBytes(Charset.forName("UTF-8")));
  OutputStreamWriter out=new OutputStreamWriter(urlConnection.getOutputStream());
  out.write(requestParams);
  out.flush();
  out.close();
  if (log.isInfoEnabled())   log.info("Http response message:" + urlConnection.getResponseMessage() + ", Code:"+ urlConnection.getResponseCode());
  if (urlConnection.getResponseCode() == HttpURLConnection.HTTP_UNAUTHORIZED)   throw new APIAuthenticationException("Invalid username or password");
 else   if (urlConnection.getResponseCode() == HttpURLConnection.HTTP_INTERNAL_ERROR)   throw new APIException("An error occurred on the remote server");
  return urlConnection.getInputStream();
}

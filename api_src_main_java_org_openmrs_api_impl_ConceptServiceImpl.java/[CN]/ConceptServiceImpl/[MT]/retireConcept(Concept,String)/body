{
  if (!StringUtils.hasText(reason))   throw new IllegalArgumentException(Context.getMessageSourceService().getMessage("general.voidReason.empty"));
  if (concept.isRetired() == false) {
    checkIfLocked();
    concept.setRetired(true);
    concept.setRetireReason(reason);
    return dao.saveConcept(concept);
  }
  return concept;
}

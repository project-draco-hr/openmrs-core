{
  boolean ret=false;
  for (ListIterator<Object> iter=list.listIterator(); iter.hasNext(); ) {
    Object o=iter.next();
    if (o instanceof List)     ret|=removeHelper((List<Object>)o,i);
 else     if (o instanceof Integer) {
      Integer ref=(Integer)o;
      if (ref == i) {
        ret=true;
        iter.set("-1");
      }
 else       if (ref > i)       iter.set(ref - 1);
    }
  }
  return ret;
}

{
  if (undecoratedIdentifier == null)   throw new UnallowedIdentifierException("Identifier can not be null.");
  if (undecoratedIdentifier.length() == 0)   throw new UnallowedIdentifierException("Identifier must contain at least one character.");
  if (undecoratedIdentifier.contains(" "))   throw new UnallowedIdentifierException("Identifier may not contain white space.");
  for (int i=0; i < undecoratedIdentifier.length(); i++) {
    if (getAllowedCharacters().indexOf(undecoratedIdentifier.charAt(i)) == -1)     throw new UnallowedIdentifierException("\"" + undecoratedIdentifier.charAt(i) + "\" is an invalid character.");
  }
}

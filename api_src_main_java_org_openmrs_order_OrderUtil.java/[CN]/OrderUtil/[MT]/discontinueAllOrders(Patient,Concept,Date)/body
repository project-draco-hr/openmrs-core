{
  if (log.isDebugEnabled())   log.debug("In discontinueAll with patient " + patient + " and concept "+ discontinueReason+ " and date "+ discontinueDate);
  OrderService orderService=Context.getOrderService();
  List<DrugOrder> drugOrders=orderService.getDrugOrdersByPatient(patient,ORDER_STATUS.CURRENT);
  if (drugOrders != null) {
    for (    DrugOrder drugOrder : drugOrders) {
      if (log.isDebugEnabled())       log.debug("discontinuing order: " + drugOrder);
      orderService.discontinueOrder(drugOrder,discontinueReason,discontinueDate);
    }
  }
}

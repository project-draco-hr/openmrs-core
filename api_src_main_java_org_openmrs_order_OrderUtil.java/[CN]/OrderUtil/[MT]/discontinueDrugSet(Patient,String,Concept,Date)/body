{
  if (log.isDebugEnabled()) {
    log.debug("Discontinuing drug sets. patient: " + patient + " drugSetId: "+ drugSetId+ " reason: "+ discontinueReason+ " date: "+ discontinueDate);
  }
  if (Context.isAuthenticated() == false)   throw new ContextAuthenticationException("Unable to discontinue drugs when no one is logged in");
  if (patient == null)   throw new APIException("Unable to discontinue drugs without a patient being given");
  if (drugSetId == null)   throw new APIException("Unable to discontinue drugs without a drugSetId being given");
  OrderService orderService=Context.getOrderService();
}

{
  Query query=null;
  List<Relationship> relationships=new Vector<Relationship>();
  if (person == null)   return relationships;
  String voided=showVoided ? "" : " and voided = 0 ";
  query=sessionFactory.getCurrentSession().createQuery("from Relationship r where r.personA = :p1 or r.personB = :p2 " + voided + " order by r.relationshipId asc ").setParameter("p1",person).setParameter("p2",person);
  if (query != null)   relationships=query.list();
  return relationships;
}

{
  if (user.getSystemId() == null || user.getSystemId().equals(""))   user.setSystemId(Context.getUserService().generateSystemId());
  if (user.getPerson() != null) {
    if (user.getPerson() instanceof Patient)     ((Patient)user.getPerson()).getIdentifiers().iterator().next();
    RequiredDataAdvice.recursivelyHandle(SaveHandler.class,user.getPerson(),creator,dateCreated,other,new ArrayList<OpenmrsObject>());
  }
}

{
  List<String> sortList=new Vector<String>();
  if (sort != null && !sort.isEmpty()) {
    for (    String sortPart : sort.split(",")) {
      sortPart=sortPart.trim();
      if (sortPart.contains(" "))       sortPart=sortPart.substring(0,sortPart.indexOf(" "));
      if (!sortPart.isEmpty())       sortList.add(sortPart);
    }
  }
  return sortList;
}

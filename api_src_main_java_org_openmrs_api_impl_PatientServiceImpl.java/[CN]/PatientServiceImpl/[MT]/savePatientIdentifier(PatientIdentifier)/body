{
  PatientIdentifierType.LocationBehavior locationBehavior=null;
  if (patientIdentifier != null) {
    locationBehavior=patientIdentifier.getIdentifierType().getLocationBehavior();
  }
  if (patientIdentifier == null || patientIdentifier.getPatient() == null || patientIdentifier.getIdentifierType() == null || StringUtils.isBlank(patientIdentifier.getIdentifier()) || (locationBehavior == PatientIdentifierType.LocationBehavior.REQUIRED && patientIdentifier.getLocation() == null))   throw new APIException("PatientIdentifier argument or one of its required fields is null or invalid");
  if (patientIdentifier.getPatientIdentifierId() == null) {
    Context.requirePrivilege(PrivilegeConstants.ADD_PATIENT_IDENTIFIERS);
  }
 else   Context.requirePrivilege(PrivilegeConstants.EDIT_PATIENT_IDENTIFIERS);
  return dao.savePatientIdentifier(patientIdentifier);
}

{
  if (!dir.exists() || !dir.isDirectory())   throw new IOException("Could not delete directory '" + dir.getAbsolutePath() + "' (not a directory)");
  if (log.isDebugEnabled())   log.debug("Deleting directory " + dir.getAbsolutePath());
  File[] fileList=dir.listFiles();
  for (  File f : fileList) {
    if (f.isDirectory())     deleteDirectory(f);
    boolean success=f.delete();
    if (log.isDebugEnabled())     log.debug("   deleting " + f.getName() + " : "+ (success ? "ok" : "failed"));
    if (!success)     f.deleteOnExit();
  }
  boolean success=dir.delete();
  if (!success) {
    log.warn("   ...could not remove directory: " + dir.getAbsolutePath());
    dir.deleteOnExit();
  }
  if (success && log.isDebugEnabled())   log.debug("   ...and directory itself");
  return success;
}

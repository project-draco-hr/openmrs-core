{
  if (useInMemoryDatabase() == false)   throw new Exception("You shouldn't be initializing a NON in-memory database. Consider unoverriding useInMemoryDatabase");
  if (columnsAdded == false) {
    Connection connection=getConnection();
    String sql="alter table users add column password varchar(255)";
    PreparedStatement ps=connection.prepareStatement(sql);
    ps.execute();
    ps.close();
    sql="alter table users add column salt varchar(255)";
    ps=connection.prepareStatement(sql);
    ps.execute();
    ps.close();
    columnsAdded=true;
  }
  executeInitialDataSet();
}

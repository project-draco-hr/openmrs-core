{
  Criteria criteria=sessionFactory.getCurrentSession().createCriteria(Location.class);
  if (!includeRetired)   criteria.add(Restrictions.eq("retired",false));
  if (StringUtils.isNotBlank(nameFragment))   criteria.add(Restrictions.ilike("name",nameFragment,MatchMode.START));
  criteria.addOrder(Order.asc("name"));
  if (start != null)   criteria.setFirstResult(start);
  if (length != null && length > 0)   criteria.setMaxResults(length);
  return criteria.list();
}

{
  OrderType type=new OrderType();
  type.setName(null);
  type.setDescription(":(");
  Errors errors=new BindException(type,"type");
  new RequireNameValidator().validate(type,errors);
  Assert.assertTrue(errors.hasFieldErrors("name"));
  type.setName("");
  errors=new BindException(type,"type");
  new RequireNameValidator().validate(type,errors);
  Assert.assertTrue(errors.hasFieldErrors("name"));
  type.setName(" ");
  errors=new BindException(type,"type");
  new RequireNameValidator().validate(type,errors);
  Assert.assertTrue(errors.hasFieldErrors("name"));
}

{
  if (relationship.isVoided())   return relationship;
  relationship.setVoided(true);
  if (relationship.getVoidedBy() == null)   relationship.setVoidedBy(Context.getAuthenticatedUser());
  if (voidReason != null)   relationship.setVoidReason(voidReason);
  relationship.setDateVoided(new Date());
  return saveRelationship(relationship);
}

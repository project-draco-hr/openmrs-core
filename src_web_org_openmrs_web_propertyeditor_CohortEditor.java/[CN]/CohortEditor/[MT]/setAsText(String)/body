{
  if (StringUtils.hasText(text)) {
    try {
      setValue(Context.getCohortService().getCohort(Integer.valueOf(text)));
    }
 catch (    Exception ex) {
      log.error("Error setting text: " + text,ex);
      throw new IllegalArgumentException("Cohort not found: " + ex.getMessage());
    }
  }
 else {
    setValue(null);
  }
}

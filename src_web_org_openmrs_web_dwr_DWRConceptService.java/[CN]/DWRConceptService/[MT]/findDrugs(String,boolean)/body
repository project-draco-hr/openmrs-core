{
  Context context=(Context)WebContextFactory.get().getSession().getAttribute(WebConstants.OPENMRS_CONTEXT_HTTPSESSION_ATTR);
  Locale locale=context.getLocale();
  ConceptService cs=context.getConceptService();
  List<Object> items=new Vector<Object>();
  List<Drug> drugs=cs.findDrugs(phrase,includeRetired);
  for (  Drug drug : drugs) {
    items.add(new ConceptDrugListItem(drug,locale));
  }
  return items;
}

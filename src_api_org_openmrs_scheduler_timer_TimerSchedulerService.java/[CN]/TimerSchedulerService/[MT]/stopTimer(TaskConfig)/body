{
  log.debug("Stopping timer for task " + task.getId());
  Timer timer=scheduledTasksMap.remove(task.getId());
  if (timer != null) {
    timer.cancel();
    timer=null;
  }
 else   throw new SchedulerException("Timer: " + timer + " was not found and hence cannot be stopped");
  task.setStarted(false);
  updateTask(task);
}

{
  if (context != null) {
    UserService ps=context.getUserService();
    if (StringUtils.hasText(text)) {
      try {
        setValue(ps.getUser(Integer.valueOf(text)));
      }
 catch (      Exception ex) {
        throw new IllegalArgumentException("User not found: " + ex.getMessage());
      }
    }
 else {
      setValue(null);
    }
  }
}

{
  try {
    if (args.length > 0) {
      System.err.println("Parsing...");
      for (int i=0; i < args.length; i++)       doFile(new File(args[i]));
    }
 else     System.err.println("Usage: java ArdenRecogizer <filename or directory name>");
  }
 catch (  Exception e) {
    System.err.println("exception: " + e);
    e.printStackTrace(System.err);
  }
}

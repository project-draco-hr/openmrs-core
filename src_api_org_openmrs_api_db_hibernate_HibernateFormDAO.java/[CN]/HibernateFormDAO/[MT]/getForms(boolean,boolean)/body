{
  Criteria crit=sessionFactory.getCurrentSession().createCriteria(Form.class);
  if (onlyPublished)   crit.add(Expression.eq("published",true));
  if (!includeRetired)   crit.add(Expression.eq("retired",false));
  crit.addOrder(Order.asc("name"));
  crit.addOrder(Order.asc("formId"));
  return crit.list();
}
